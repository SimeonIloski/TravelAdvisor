@model IEnumerable<TripAdvisor.Models.Transportation>

@{
    ViewBag.Title = "IndexReadOnly";
}



<h2 class="text-center">List of Transporets</h2>


<table class="table table-striped table-hover">
    <tr>
        <th>
            <h5>Transporter Name</h5>
        </th>
        <th>
            <h5>Location of departure</h5>
        </th>
        <th>
            <h5>Location of arrival</h5>
        </th>
        <th>
            <h5>Two-way ticket Price</h5>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price) denars
            </td>
            <td>
                <p>@Html.ActionLink("ShowByCity", "City", new { id = item.Id })</p>
            </td>
            
        </tr>
    }

</table>